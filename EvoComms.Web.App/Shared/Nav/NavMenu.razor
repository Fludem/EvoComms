@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<!-- ========== HEADER ========== -->
<header class="flex flex-col z-50">
  <div class="bg-blue-700 border-b border-blue-600">
    <div
      class="max-w-[105rem] w-full flex justify-between lg:grid lg:grid-cols-3 basis-full items-center mx-auto py-2.5 lg:px-12 xl:px-16">
      <div class="flex items-center gap-x-3">
        <!-- Logo -->
        <a class="flex-none text-xl inline-block text-white font-medium tracking-wide focus:opacity-80 focus:outline-none"
          href="../../pro/saas/index.html" aria-label="Preline">
          <h1>evocomms</h1>
        </a>
        <!-- End Logo -->

        <div class="md:hidden">
          <!-- Collapse Button Trigger -->
          <button type="button"
            class="hs-collapse-toggle inline-flex justify-center items-center w-7 h-[38px] text-start border border-white/20 text-white rounded-lg shadow-sm align-middle hover:bg-white/10 disabled:opacity-50 focus:outline-none focus:bg-white/10"
            id="hs-pro-dmh-collapse" aria-expanded="false" aria-controls="hs-pro-dmh" aria-label="Toggle navigation"
            data-hs-collapse="#hs-pro-dmh">
            <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
              fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="1" />
              <circle cx="12" cy="5" r="1" />
              <circle cx="12" cy="19" r="1" />
            </svg>
          </button>
          <!-- End Collapse Button Trigger -->
        </div>
      </div>

      <div class="hidden md:block lg:w-full lg:mx-0">
        <!-- Search Input -->
        <div class="relative">
          <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none z-20 ps-3.5">
            <svg class="shrink-0 size-4 text-white/60" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
              viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <circle cx="11" cy="11" r="8" />
              <path d="m21 21-4.3-4.3" />
            </svg>
          </div>
          <input type="text"
            class="py-2 px-3 ps-10 pe-16 block w-full bg-white/10 border-transparent text-white rounded-lg text-sm focus:z-10 focus:border-white/10 focus:ring-white/10 placeholder:text-white/60 disabled:opacity-50 focus:outline-none focus:ring-1 focus:ring-white/20"
            placeholder="Search evocomms" data-hs-overlay="#hs-pro-dnsm">
          <div class="hidden absolute inset-y-0 end-0 flex items-center pointer-events-none z-20 pe-1">
            <button type="button"
              class="inline-flex shrink-0 justify-center items-center size-6 rounded-full text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600"
              aria-label="Close">
              <span class="sr-only">Close</span>
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10" />
                <path d="m15 9-6 6" />
                <path d="m9 9 6 6" />
              </svg>
            </button>
          </div>
          <div class="absolute inset-y-0 end-0 flex items-center z-20 pe-3 text-gray-400">
            <svg class="shrink-0 size-3 text-white/60" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
              viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <path d="M15 6v12a3 3 0 1 0 3-3H6a3 3 0 1 0 3 3V6a3 3 0 1 0-3 3h12a3 3 0 1 0-3-3" />
            </svg>
            <span class="mx-1">
              <svg class="shrink-0 size-3 text-white/60" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                stroke-linejoin="round">
                <path d="M5 12h14" />
                <path d="M12 5v14" />
              </svg>
            </span>
            <span class="text-xs">/</span>
          </div>
        </div>
        <!-- End Search Input -->
      </div>

      <div class="flex justify-end items-center gap-x-0">
        <div class="flex items-center">
          <div class="md:hidden">
            <!-- Search Button Icon -->
            <button type="button"
              class="inline-flex shrink-0 justify-center items-center gap-x-2 size-[38px] rounded-full text-white hover:bg-white/10 disabled:opacity-50 focus:outline-none focus:bg-white/10"
              data-hs-overlay="#hs-pro-dnsm">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8" />
                <path d="m21 21-4.3-4.3" />
              </svg>
            </button>
            <!-- End Search Button Icon -->
          </div>
          <HelpMenu />
          <NotificationMenu />
        </div>

        @*
        Uncomment this code when need user menu
        <div class="hidden sm:block border-e border-gray-700 w-px h-6 mx-1.5"></div>

        <UserMenu />
        *@
      </div>
    </div>
  </div>

  <nav class="relative bg-white border-b border-gray-300">
    <div class="max-w-[105rem] flex flex-wrap basis-full items-center w-full mx-auto md:py-2.5 px-6 lg:px-12 xl:px-16">
      <!-- Nav Links -->
      <div class="basis-full grow md:basis-auto md:grow-0 md:w-full">
        <!-- Collapse -->
        <div id="hs-pro-dmh" class="hs-collapse hidden overflow-hidden transition-all duration-300 md:block"
          aria-labelledby="hs-pro-dmh-collapse">
          <div class="md:flex md:flex-wrap md:items-center md:gap-x-5 py-2 md:py-0 space-y-0.5 md:space-y-0">
            <a class="py-2 px-2 md:px-2.5 xl:px-3.5 flex items-center gap-x-1.5 font-medium text-sm text-start text-nowrap text-blue-500 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-100 bg-stone-100/60"
              href="../../pro/saas/index.html">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="navbar-icon active-route">
                <rect width="7" height="9" x="3" y="3" rx="1" />
                <rect width="7" height="5" x="14" y="3" rx="1" />
                <rect width="7" height="9" x="14" y="12" rx="1" />
                <rect width="7" height="5" x="3" y="16" rx="1" />
              </svg>
              Overview
            </a>

            <a class="py-2 px-2 md:px-2.5 xl:px-3.5 flex items-center gap-x-1.5 text-sm text-start text-nowrap text-gray-800 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-100"
              href="#">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="navbar-icon">
                <path d="M19.07 4.93A10 10 0 0 0 6.99 3.34" />
                <path d="M4 6h.01" />
                <path d="M2.29 9.62A10 10 0 1 0 21.31 8.35" />
                <path d="M16.24 7.76A6 6 0 1 0 8.23 16.67" />
                <path d="M12 18h.01" />
                <path d="M17.99 11.66A6 6 0 0 1 15.77 16.67" />
                <circle cx="12" cy="12" r="2" />
                <path d="m13.41 10.59 5.66-5.66" />
              </svg>
              Scanners
            </a>
            <a class="py-2 px-2 md:px-2.5 xl:px-3.5 flex items-center gap-x-1.5 text-sm text-start text-nowrap text-gray-800 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-100"
              href="#">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="navbar-icon">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                <path d="M16 3.13a4 4 0 0 1 0 7.75" />
              </svg>
              Employees
            </a>
            <a class="py-2 px-2 md:px-2.5 xl:px-3.5 flex items-center gap-x-1.5 text-sm text-start text-nowrap text-gray-800 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-100"
              href="#">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="navbar-icon">
                <path
                  d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z" />
                <circle cx="12" cy="12" r="3" />
              </svg>
              Server Settings
            </a>


            <div class="md:flex md:justify-end md:items-center md:gap-x-0 md:ms-auto">

            </div>
          </div>
        </div>
        <!-- End Collapse -->
      </div>
      <!-- End Nav Links -->
    </div>
  </nav>
</header>
<!-- ========== END HEADER ========== -->
