@using Microsoft.AspNetCore.Components.Web
@namespace EvoComms.Web.App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en" class="relative min-h-full light bg-gray-50">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="assets/css/app.min.css" rel="stylesheet" />
    <link href="EvoComms.Web.App.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>

<body class="bg-gray-50 caret-slate-700 text-gray-700 antialiased">
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="assets/vendor/preline/dist/preline.js"></script>
    <script>
        window.initPreline = function () {
            if (typeof window.HSStaticMethods !== 'undefined') {
                window.HSStaticMethods.autoInit();
            } else {
                console.warn('HSStaticMethods is not available. Preline might not be loaded properly.');
            }
        };

        // For Blazor navigation
        window.navigateToFromBlazor = function (uri) {
            setTimeout(initPreline, 0);
        };
    </script>
    <script src="_content/Blazor.ContextMenu/blazorContextMenu.min.js"></script>
</body>

</html>
