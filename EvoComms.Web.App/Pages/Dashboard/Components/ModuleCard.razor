<div
  class="w-full max-w-lg bg-white shadow-sm hover:shadow-lg cursor-pointer relative overflow-visible group motion-delay-150 motion-ease-spring-bouncy motion-duration-700 motion-opacity-in-0 motion-translate-y-in-25 border border-slate-200"
  @onclick="HandleCardClick">
  <div class="p-6 space-y-4 md:p-7">
    <h3 class="text-xl font-bold text-gray-800">@ModuleName</h3>
    <p class="text-sm text-gray-600 mt-2">
      @ModuleDescription
    </p>
  </div>
  <div class="px-6 pb-6">
    <div class="flex items-center justify-between">
      <div
        class="inline-flex align-middle items-center space-x-1 text-blue-500 transition-all duration-300 group-hover:text-blue-600 motion-ease-bounce">
        <span
          class="text-sm font-medium group-hover:translate-x-1 transition-all duration-300 motion-ease-spring-bouncier">Configure</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="size-3 mt-px motion-ease-spring-bouncier transition-all group-hover:translate-x-2 duration-300 delay-[50ms] shrink-0">
          <path d="M5 12h14" />
          <path d="m12 5 7 7-7 7" />
        </svg>
      </div>
      <span
        class="py-[5px] px-1.5 inline-flex items-center gap-x-1 text-xs rounded-full bg-teal-100 text-teal-800 dark:bg-teal-500/10 dark:text-teal-500">
        <span class="size-1.5 inline-block bg-teal-800 rounded-full dark:bg-teal-500"></span>
        Running
      </span>
      @* <div
          class="@(IsEnabled ? "bg-green-500" : "bg-red-500") transition-colors duration-200 relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        @onclick:stopPropagation @onclick="HandleSwitchClick">
          <span
            class="@(IsEnabled ? "translate-x-5" : "translate-x-0") inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
        </div> *@
    </div>
  </div>
  <div
    class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-indigo-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left motion-ease-spring-snappy delay-100">
  </div>
</div>
